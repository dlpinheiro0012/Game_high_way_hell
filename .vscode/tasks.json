{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                // Comando principal a ser executado.
                "command": "gcc",
                
                // Cada argumento é passado como um item separado em uma lista.
                // Esta forma é menos propensa a erros de aspas ou interpretação do shell.
                "args": [
                    "-o",
                    "build/jogo.exe",
                    // A expansão do curinga ainda é responsabilidade do shell,
                    // mas passar como um argumento separado costuma ser mais confiável.
                    "src/*.c",
                    "-Iraylib/include",
                    "-Lraylib/lib",
                    "-lraylib",
                    "-lopengl32",
                    "-lgdi32",
                    "-lwinmm",
                    "-static"
                ],
                // Opções para controlar como o comando é executado.
                "options": {
                    // Especifica o diretório de trabalho atual.
                    // "${workspaceFolder}" garante que os caminhos relativos (como src/*.c) funcionem.
                    "cwd": "${workspaceFolder}"
                }
            },
            "linux": {
                // A versão para Linux também é mais robusta desta forma.
                "command": "gcc",
                "args": [
                    "-o",
                    "build/jogo",
                    "src/*.c",
                    "-Iraylib/include",
                    "-Lraylib/lib",
                    "-lraylib",
                    "-lGL",
                    "-lm",
                    "-lpthread",
                    "-ldl",
                    "-lrt",
                    "-lX11"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}