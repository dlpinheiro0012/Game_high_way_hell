{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                
                // --- MUDANÇA 1: Usar workspaceFolder ---
                // Isso pega TODOS os .c da pasta raiz do projeto
                "${workspaceFolder}/source/*.c", 
                
                // --- MUDANÇA 2: Usar workspaceFolder ---
                "-o",
                "${workspaceFolder}\\projeto.exe", 
                
                // --- Argumentos do Raylib (Idênticos) ---
                "-I",
                "C:/raylib/raylib/src", 
                "-L",
                "C:/raylib/raylib/src", 
                "-lraylib",   
                "-lopengl32", 
                "-lgdi32",    
                "-lwinmm"
                // -----------------------------
            ],
            "options": {
                // --- MUDANÇA 3: Usar workspaceFolder ---
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}