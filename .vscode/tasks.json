{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project (Manual)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "gcc",
                // AQUI ESTÁ A MUDANÇA CRUCIAL
                // Removemos "src/*.c" e colocamos o nome de cada arquivo fonte.
                "args": [
                    "-o",
                    "build/jogo.exe",
                    "src/main.c",
                    "src/creditos.c",
                    "src/load.c",
                    "src/menu.c",   // <-- Listamos o arquivo manualmente
                    // Se você adicionar mais arquivos, adicione-os aqui. Ex: "src/player.c", "src/menu.c",
                    "-Iraylib/include",
                    "-Lraylib/lib",
                    "-lraylib",
                    "-lopengl32",
                    "-lgdi32",
                    "-lwinmm",
                    "-static"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "linux": {
                "command": "gcc",
                "args": [
                    "-o",
                    "build/jogo",
                    "src/main.c",   // <-- Listamos o arquivo manualmente
                    "-Iraylib/include",
                    "-Lraylib/lib",
                    "-lraylib",
                    "-lGL",
                    "-lm",
                    "-lpthread",
                    "-ldl",
                    "-lrt",
                    "-lX11"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}