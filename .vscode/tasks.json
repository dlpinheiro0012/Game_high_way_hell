{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Game (Windows)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/game.exe",
                "-I${workspaceFolder}/raylib/include",
                "-L${workspaceFolder}/raylib/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}